{
  "name": "ai-agent-knowledge-base",
  "version": "1.0.0",
  "description": "Knowledge base and reusable modules for AI agents",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:md && npm run lint:ts",
    "lint:fix": "npm run lint:md:fix && npm run lint:ts:fix && npm run format",
    "lint:md": "node node_modules/markdownlint-cli/markdownlint.js '**/*.md' --ignore node_modules --ignore 'modules/*/node_modules'",
    "lint:md:fix": "node node_modules/markdownlint-cli/markdownlint.js '**/*.md' --fix --ignore node_modules --ignore 'modules/*/node_modules'",
    "lint:ts": "node node_modules/eslint/bin/eslint.js 'modules/**/*.{ts,tsx}' --max-warnings 0",
    "lint:ts:fix": "node node_modules/eslint/bin/eslint.js 'modules/**/*.{ts,tsx}' --fix",
    "format": "node node_modules/prettier/bin/prettier.cjs --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "node node_modules/prettier/bin/prettier.cjs --check '**/*.{ts,tsx,js,jsx,json,md}'",
    "type-check": "node node_modules/typescript/bin/tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node node_modules/eslint/bin/eslint.js --fix",
      "node node_modules/prettier/bin/prettier.cjs --write"
    ],
    "*.md": [
      "node node_modules/markdownlint-cli/markdownlint.js --fix",
      "node node_modules/prettier/bin/prettier.cjs --write"
    ],
    "*.{json,js}": [
      "node node_modules/prettier/bin/prettier.cjs --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
